{
	"name": "svelte-budget-planner",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --host 0.0.0.0 --port 3000",
		"dev:nvim": "node --inspect ./node_modules/.bin/vite dev --host 0.0.0.0 --port 3000",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"test:e2e": "playwright test",
		"coverage": "vitest run --coverage",
		"lint": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --plugin=prettier-plugin-organize-imports . --check . && eslint . && npm run check",
		"format": "prettier --plugin=prettier-plugin-svelte --plugin=prettier-plugin-tailwindcss --plugin=prettier-plugin-organize-imports . --write .",
		"prepare": "husky",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.57.0",
		"@skeletonlabs/skeleton": "^4.9.0",
		"@skeletonlabs/skeleton-svelte": "^4.9.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-vercel": "^6.3.0",
		"@sveltejs/kit": "^2.49.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@types/node": "^24.10.6",
		"@vitest/coverage-v8": "^4.0.16",
		"dotenv": "^17.2.3",
		"dotenv-expand": "^12.0.3",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"prettier": "^3.7.4",
		"prettier-plugin-organize-imports": "^4.3.0",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.4",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.52.0",
		"vercel": "^50.1.6",
		"vite": "^7.3.1",
		"vitest": "^4.0.3"
	},
	"type": "module",
	"dependencies": {
		"@auth/sveltekit": "^1.11.1",
		"@floating-ui/dom": "^1.7.4",
		"@neondatabase/serverless": "^1.0.2",
		"@tailwindcss/vite": "^4.1.18",
		"@vercel/otel": "^2.1.0",
		"lucide-svelte": "^0.562.0",
		"svelte-i18n": "^4.0.1"
	},
	"engines": {
		"node": "24.x"
	}
}

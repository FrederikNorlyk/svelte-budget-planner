		"@tailwindcss/vite": "^4.1.4",
		"kysely": "^0.28.2",
		"kysely-neon": "^1.3.0",
		"kysely-plugin-prefix": "^1.2.2",
		"lucide-svelte": "^0.503.0",
		"svelte-i18n": "^4.0.1"
	},
	"engines": {
		"node": "22.x"
	}
